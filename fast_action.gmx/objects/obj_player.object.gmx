          <argument>
            <kind>1</kind>
            <string>/// Control the player
var hspd = 0;
var vspd = 0;
// Control the attack
if (state == scr_attack_state){
    // Move a little bit
    if (moved == false and image_index &gt;= 3){
        switch (dir){
        case 0:
            hspd = spd * 2;
            break;
        case 1:
            vspd = -spd * 2;
            break;
        case 2:
            hspd = -spd * 2;
            break;
        case 3:
            vspd = spd * 2;
            break;
        }
        scr_move(hspd, vspd);
        moved = true;
    }
    // Combo reset attack
    if (image_index &gt;= 5 and obj_input.attack_key){
        attack += 1;
        moved = false;
        attacked = false;
        image_index = 0;
    }
}

// Check the hp
if (obj_player_health.hp &lt;= 0){
    obj_input.dead = true;
    instance_destroy();
}

// Knockback
if (knockback == true){
    var hspd = lengthdir_x(3, kdir);
    var vspd = lengthdir_y(3, kdir);
    scr_move(hspd, vspd);
    image_blend = c_red;
}

// Recover stamin
if (alarm[3] &lt;= 0){
    with (obj_player_health){
        if (stamin &lt; max_stamin){
            stamin += 0.3;
        }
        if (stamin &gt;= max_stamin){
            stamin = max_stamin;
        }
    }
}

// Run the state
script_execute(state);

depth = -y;
</string>
